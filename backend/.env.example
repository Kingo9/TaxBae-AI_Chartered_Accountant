# File Upload
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:8081,exp://192.168.0.119:8081"

# Socket.IO
SOCKET_PORT=3002
